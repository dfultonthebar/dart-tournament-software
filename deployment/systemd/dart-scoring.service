[Unit]
Description=Dart Tournament Scoring Terminal
After=network.target dart-backend.service
Wants=dart-backend.service

[Service]
Type=simple
User=dartuser
Group=dartuser
WorkingDirectory=/opt/dart-tournament/scoring-terminal
Environment="NODE_ENV=production"
Environment="NEXT_PUBLIC_API_URL=http://localhost:8000"
Environment="NEXT_PUBLIC_WS_URL=ws://localhost:8000"
ExecStart=/usr/bin/npm start
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
